{% block sw_settings_system_info_index %}
<sw-page class="sw-settings-system-info">

    {% block sw_settings_system_info_search_bar %}
        <template slot="search-bar">
            <sw-search-bar>
            </sw-search-bar>
        </template>
    {% endblock %}

    {% block sw_settings_system_info_smart_bar_header %}
        <template slot="smart-bar-header">
            {% block sw_settings_system_info_smart_bar_header_title %}
                <h2>
                    {% block sw_settings_system_info_smart_bar_header_title_text %}
                        {{ $tc('sw-settings.index.title') }}
                        <sw-icon name="small-arrow-medium-right" small>
                        </sw-icon>
                        {{ $tc('sw-settings-system-info.general.textHeadline') }}
                        {% endblock %}

                        {% block sw_settings_system_info_smart_bar_header_amount %}
                        <span v-if="false" class="sw-page__smart-bar-amount">
                        ({{ total }})
                        </span>
                    {% endblock %}
                </h2>
            {% endblock %}
        </template>
    {% endblock %}

    {% block sw_settings_system_info_content %}
    <template slot="content">
        <sw-card-view>
            <sw-system-config
                ref="systemConfig"
                salesChannelSwitchable
                domain="core.listing">
            </sw-system-config>
        </sw-card-view>
    </template>
    {% endblock %}
</sw-page>
{% endblock %}
